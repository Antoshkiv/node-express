<h1>Редагувати курс {{course.title}} </h1>

<form action="/courses/edit" method="POST">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required value="{{course.title}}">
        <label for="first_name">Назва курсу</label>
        <span class="helper-text" data-error="Введіть назву курсу"></span>
    </div>

    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required min={1} value="{{course.price}}">
        <label for="price">Ціна курсу</label>
        <span class="helper-text" data-error="Ввeдіть ціну"></span>
    </div>

    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" required value="{{course.img }}">
        <label for="img">URL картинки</label>
        <span class="helper-text" data-error="Введіть посилання на картинку"></span>
    </div>

    <input type="hidden" name='id' value="{{course.id}}">

    <button class="btn btn-primary">Редагувати курс</button>
</form>