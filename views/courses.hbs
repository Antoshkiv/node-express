<h1>Курси</h1>

{{#if courses.length }}
{{#each courses}}
<div class="row">
    <div class="col s6 offset-s3">
        <div class="card">
            <div class="card-image waves-effect waves-block waves-light">
                <img class="activator" src="{{img}}" alt="{{title}}">
            </div>
            <div class="card-content">
                <span class="card-title activator grey-text text-darken-4">{{title}}</span>
                <p class="price">{{price}}</p>
            </div>
            <div class="card-action">
                <p><a href="/courses/{{_id}}" target="_blank">Відкрити курс</a></p>
                <p><a href="/courses/{{_id}}/edit?allow=true" target="_blank">Редагувати</a></p>
                <form action="/card/add" method="POST">
                    <input type="hidden" name="id" value="{{_id}}" />
                    <button type="submit" class="btn btn-primary">Купити</button>
                </form>
            </div>
        </div>
    </div>
</div>
{{/each}}
{{else}}
<p>Курсів поки не має...
    </pre>
    {{/if}}